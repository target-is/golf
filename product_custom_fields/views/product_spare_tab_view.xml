<odoo>
    <record id="product_spare_tab" model="ir.ui.view">
        <field name="name">product.template.spare.tab</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">

                <!-- التاب مخفي لو is_spareparts = False -->
                <page name="spare_parts_tab"
                      string="Spare Parts"
                >

                    <field name="spareparts_line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="spare_product_id" width="200"/>
                            <field name="sales_price" width="80"/>
                            <field name="cost" width="80"/>
                            <field name="quantity_on_hand" width="80"/>
                        </list>


                    </field>

                </page>

            </xpath>
        </field>
    </record>
</odoo>
