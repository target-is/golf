<odoo>
    <record id="repair_order_form_inherit_cancel_wizard" model="ir.ui.view">
        <field name="name">repair.order.form.cancel.wizard</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">

            <!-- استبدال زرار Cancel Repair الأصلي -->
            <xpath expr="//button[@name='action_repair_cancel']" position="replace">

                <button name="action_open_cancel_wizard"
                        string="Reject Repair"
                        type="object"
                        class="btn btn-danger"
                        invisible="state in ('done','cancel')"
                        confirm="Are you sure you want to cancel this repair order?"/>
            </xpath>
            <!-- Change Confirm Repair button label -->
            <xpath expr="//button[@name='action_validate']" position="attributes">
                <attribute name="string">Approval Repair</attribute>
            </xpath>
        </field>
    </record>
</odoo>
