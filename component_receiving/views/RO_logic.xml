<odoo>

    <!-- ===================================================== -->
    <!-- 1) زرار Repair Order Received? يظهر بعد DONE فقط       -->
    <!-- ===================================================== -->
    <record id="view_picking_form_inherit_cr_header" model="ir.ui.view">
        <field name="name">stock.picking.form.cr.header</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <header position="inside">
                <button name="action_open_cr_ro_decision"
                        type="object"
                        string="Repair Order Received?"
                        class="oe_highlight"
                        groups="stock.group_stock_user"
                        invisible="state != 'done' or not is_cr_view or cr_state != 'draft'"/>

            </header>

        </field>
    </record>


    <!-- ===================================================== -->
    <!-- 2) زرار Create RO يظهر فقط في waiting_ro + CR View    -->
    <!-- ===================================================== -->
    <record id="view_picking_form_inherit_cr_waiting" model="ir.ui.view">
        <field name="name">stock.picking.form.cr.waiting</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <header position="inside">
                <button name="action_open_create_ro_wizard"
                        type="object"
                        string="Create RO"
                        class="btn-primary"
                        groups="sales_team.group_sale_salesman"
                        invisible="cr_state != 'waiting_ro' or not is_cr_view or not has_sale_access"/>

            </header>

        </field>
    </record>


    <!-- ===================================================== -->
    <!-- 3) Wizard 1 — YES / NO Decision                      -->
    <!-- ===================================================== -->
    <record id="view_cr_repair_decision_wizard" model="ir.ui.view">
        <field name="name">cr.repair.decision.wizard.form</field>
        <field name="model">cr.repair.decision.wizard</field>
        <field name="arch" type="xml">
            <form string="Repair Order Received?">
                <group>
                    <field name="option"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <!-- ===================================================== -->
    <!-- 4) Wizard 2 — Create RO OR Cancel                    -->
    <!-- ===================================================== -->
    <record id="view_cr_create_ro_wizard" model="ir.ui.view">
        <field name="name">cr.create.ro.wizard.form</field>
        <field name="model">cr.create.ro.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Repair Orders">
                <group>
                    <field name="option"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_picking_form_cr_state" model="ir.ui.view">
        <field name="name">stock.picking.form.cr.state</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>

        <field name="arch" type="xml">

            <!-- نضيف statusbar جديد تحت state الأصلي -->
            <xpath expr="//header" position="after">
                <field name="cr_state"
                       widget="statusbar"
                       statusbar_visible="draft,waiting_ro,ro_created"
                       invisible="state != 'done' or not is_cr_view"
                />
            </xpath>


        </field>
    </record>




</odoo>
