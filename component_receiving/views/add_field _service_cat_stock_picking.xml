<odoo>
    <!-- Inherit picking form to modify the operations tree/list -->
    <record id="view_picking_operations_add_service_category" model="ir.ui.view">
        <field name="name">stock.picking.operations.add.service.category</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>

        <field name="arch" type="xml">

            <!-- نحدد مكان جدول العمليات -->
            <xpath expr="//page[@name='operations']//field[@name='move_ids']//list/field[@name='product_id']" position="after">

                <!-- يظهر فقط داخل Component Receiving -->
                <field name="service_category"
                       string="Service Category"
                       optional="show"
                       invisible="not parent.is_cr_view"/>

            </xpath>

        </field>
    </record>

</odoo>






